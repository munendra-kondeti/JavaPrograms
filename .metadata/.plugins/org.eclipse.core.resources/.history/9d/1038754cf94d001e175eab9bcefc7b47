package com.kn.matrixmultiplication;

import java.util.Scanner;

public class MatrixMultiplicationDemo {

	public static void main(String[] args) {
		
		// User  input object
		System.out.println("<<Matrix multiplication>>");
		System.out.println("Enter 1st array values ");
		int[][] arr = twoDArrayCreation(3,3);
		System.out.println("Enter 2nd array values ");
		int[][] brr = twoDArrayCreation(3,3);
		
	}
	
	private static int[][] twoDArrayCreation(int firstSize, int secondSize) {
		Scanner scanner = new Scanner(System.in);
		int[][] array = new int[firstSize][secondSize];
		for(int i = 0 ; i< array.length;i++) {
			for(int j = 0 ; j < array[i].length;j++) {
				array[i][j] = scanner.nextInt();
			}
		}
		return array;
	}

}
