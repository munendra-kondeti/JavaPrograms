package com.kn.pattrenspractice;

public class NumberPyramid {

	public static void main(String[] args) {
		for (int i = 1; i <= 5; i++) {
			for (int j = 0; j < 8; j++) {
				if (i + j >= 5 & j - i <= 3) {
					System.out.print(i);
				}
				else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
