package com.kn.patterens;

public class Pattren01 {

	public static void main(String[] args) {
		int num= 5;
		int k=0;
		for(int i =1;i<=num;i++) {
			for(int j =1;j<=num;j++) {
				int o = (j<=4)?k++:k--;
				if(j>=5-i && j<=3+i) {
					if(i%2!=0) {
						if(j%2==0) System.out.print(k);
						else System.out.print(" ");
					}else {
						if(j%2!=0) System.out.print(k);
						else System.out.print(" ");
					}
				}
				else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
