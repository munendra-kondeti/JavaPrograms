package com.kn.patterens;

public class Patterens02 {

	public static void main(String[] args) {
		
		int k=0,rT=5,cL=9;
		for(int i =1; i<= rT ; i++) {
			for(int j =1; j<= cL;j++) {
				if(j>=6-i && j<=4+i) {
					if(i<=j){
						k=i;
						System.out.print(k=((cL/2)<=j)?k++:k--);
						
					}
				}
				else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
