package com.kn.patterens;

public class Pattren01 {

	public static void main(String[] args) {
		int k = 0;
		for (int i = 1; i <= 4; i++) {
			for (int j = 1; j <= 7; j++) {
				if (j >= 5 - i && j <= 3 + i) {
					if (i % 2 != 0) {
						if (j % 2 == 0) {
							int o = (j <= 4 || j == 0) ? k++ : k--;
							System.out.print(k);
						} else
							System.out.print(" ");
					} else {
						if (j % 2 != 0) {
							int o = (j <= 4 || j == 0) ? k++ : k--;
							System.out.print(k);
						} else
							System.out.print(" ");
					}
				} else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
