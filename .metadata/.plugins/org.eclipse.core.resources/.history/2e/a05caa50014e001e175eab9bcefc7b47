package com.kn.arrayrotation;

public class RotateArray {
	// Method
	void rotateArray(int[] arr) {
		// {10,20,30,40,50};
		// left to right
//		int tempL = arr[0];
//		for (int j = 0; j < arr.length - 1; j++) {
//			arr[j] = arr[j + 1];
//			arr[j + 1] = tempL;
//		}
		// {10,20,30,40,50};
		// right to left
		for (int j = 0; j < arr.length - 1; j++) {
			int tempR = arr[0];
			int fTemp = arr[arr.length-j-1];
			arr[j] = fTemp ;
			arr[j + 1] = tempR;
		}

		// print
		for (int e : arr)
			System.out.println(e);
	}
}
