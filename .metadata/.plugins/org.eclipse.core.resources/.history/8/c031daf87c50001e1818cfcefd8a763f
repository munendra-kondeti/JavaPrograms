package com.kn.pattrenspractice;

public class PalindromicNumberPyramid {

	public static void main(String[] args) {
		for (int i = 1; i <= 5; i++) {
			int k = i;
			if (i >= 5) {
				k--;
			}

			for (int j = 0; j < 9; j++) {
				if (i + j >= 5 && j - i <= 3) {
					System.out.print(k);
				} else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
